<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niit.project.radiom"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.niit.project.radiom.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.niit.project.radiom.activity.FailActivity" />
        <activity android:name="com.niit.project.radiom.activity.GameActivity" />
        <activity android:name="com.niit.project.radiom.activity.RankActivity" />
        <activity android:name="com.niit.project.radiom.activity.SettingActivity" />
        <activity android:name="com.niit.project.radiom.activity.SuccessActivity" />
        <activity android:name="com.niit.project.radiom.activity.WinActivity" />

        <service android:name="com.niit.project.radiom.music.MusicService" >
            <intent-filter>
                <action android:name="com.niit.project.radiom.MusicService" />
            </intent-filter>
        </service>
    </application>

</manifest>